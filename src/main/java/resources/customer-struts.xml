<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<!-- Customer APIs -->
	<constant name="struts.devMode" value="true" />

	<!-- GET Request -->
	<package namespace="/customer/read" name="readCustomer"
		extends="json-default">

		<!-- Get All Customers -->
		<action name="all" class="com.ecom.action.CustomerAction"
			method="readAll">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>

		<!-- Get Customer by ID -->
		<action name="byid" class="com.ecom.action.CustomerAction"
			method="readById">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>

		<!-- Get All Customers by Country Names -->
		<action name="bycountries"
			class="com.ecom.action.CustomerAction" method="readByCountries">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>
	</package>

	<!-- POST Request -->
	<package namespace="/customer/add" name="addCustomer"
		extends="json-default">

		<!-- Add New Customer -->
		<action name="single" class="com.ecom.action.CustomerAction"
			method="addCustomer">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>

		<!-- Add New Customer(s) -->
		<action name="multiple" class="com.ecom.action.CustomerAction"
			method="addCustomers">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>
	</package>

	<!-- PATCH Request -->
	<package namespace="/customer/update" name="updateCustomer"
		extends="json-default">

		<!-- Update Existing Customer -->
		<action name="byid" class="com.ecom.action.CustomerAction"
			method="updateCustomer">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>
	</package>

	<!-- DELETE Request -->
	<package namespace="/customer/delete" name="deleteCustomer"
		extends="json-default">

		<!-- Delete Existing Customer -->
		<action name="byid" class="com.ecom.action.CustomerAction"
			method="deleteById">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
			</result>
		</action>
	</package>
</struts>