<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<!-- OrderDetail APIs -->
	<constant name="struts.devMode" value="true" />

	<!-- GET Request -->
	<package namespace="/orderdetail/read" name="readOrderDetail"
		extends="json-default">

		<!-- Get OrderDetail by Id -->
		<action name="byid" class="com.ecom.action.OrderDetailAction"
			method="readById">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>

		<!-- Get OrderDetail(s) by Id(s) -->
		<action name="byids" class="com.ecom.action.OrderDetailAction"
			method="readByIds">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
	</package>

	<!-- POST Request -->
	<package namespace="/orderdetail/insert"
		name="insertOrderDetail" extends="json-default">

		<!-- Insert new OrderDetail(s) -->
		<action name="multiple"
			class="com.ecom.action.OrderDetailAction" method="insert">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
	</package>

	<!-- PATCH Request -->
	<package namespace="/orderdetail/update"
		name="updateOrderDetails" extends="json-default">

		<!-- Update by orderDetail Id -->
		<action name="bydetailid"
			class="com.highradius.ecom.action.OrderDetailAction"
			method="updateByDetailId">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>

		<!-- Update by product Id -->
		<action name="byproductid"
			class="com.highradius.ecom.action.OrderDetailAction"
			method="updateByProductId">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>

		<!-- Update by order Id -->
		<action name="byorderid"
			class="com.highradius.ecom.action.OrderDetailAction"
			method="updateByOrderId">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
	</package>

	<!-- DELETE Request -->
	<package namespace="/orderdetail/delete"
		name="deleteOrderDetails" extends="json-default">

		<!-- Delete using Id -->
		<action name="single"
			class="com.highradius.ecom.action.OrderDetailAction"
			method="deleteSingle">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>

		<!-- Dlete using Id(s) -->
		<action name="multiple"
			class="com.highradius.ecom.action.OrderDetailAction"
			method="deleteMultiple">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json">
				<param name="root">root</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
	</package>
</struts>